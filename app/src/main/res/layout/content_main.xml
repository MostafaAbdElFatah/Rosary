<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="abdelfatah.mostafa.com.rosary.MainActivity"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:onClick="Count_Clicked">
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:id="@+id/counter"
        android:textColor="#fff"
        android:textSize="50dp"
        android:textDirection="rtl"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="لااله الا الله"
        android:gravity="center"
        android:id="@+id/Azkartext"
        android:textColor="#fff"
        android:textSize="40dp"
        android:textDirection="rtl" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:id="@+id/linearLayoutButtom">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/setting"
            android:id="@+id/button1"
            android:layout_marginRight="10dp"
            android:onClick="Setting_Clicked"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/repeat"
            android:layout_marginRight="10dp"
            android:id="@+id/button2"
            android:onClick="Reset_counter"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/menu"
            android:id="@+id/button3"
            android:onClick="Menu_Clicked"/>
    </LinearLayout>
</RelativeLayout>
